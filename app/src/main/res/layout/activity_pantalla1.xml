<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pantalla1"
    android:background="@drawable/img_1">

    <include
        android:id="@+id/lbtoolbar"
        layout="@layout/toobar"/>

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="217dp"
        android:layout_height="263dp"
        android:fontFamily="@font/carter_one"
        android:text=""
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.677" />

    <Spinner
        android:id="@+id/spTabla"
        android:layout_width="286dp"
        android:layout_height="42dp"
        android:background="#707A7A7A"
        android:fontFamily="@font/carter_one"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.208"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="223dp"
        android:layout_height="51dp"
        android:fontFamily="@font/carter_one"
        android:text="@string/button"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtResultado"
        app:layout_constraintVertical_bias="0.18" />

    <EditText
        android:id="@+id/txtOtro"
        android:layout_width="276dp"
        android:layout_height="44dp"
        android:layout_marginStart="93dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="108dp"
        android:textAlignment="center"
        android:layout_marginBottom="43dp"
        android:ems="10"

        android:fontFamily="@font/carter_one"
        android:hint="@string/txtedit"
        android:inputType="number"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/txtResultado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.393"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spTabla"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/carter_one"
        android:text="@string/titulo"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.127" />


</androidx.constraintlayout.widget.ConstraintLayout>